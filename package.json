    "@fastify/sensible": "^6.0.2",
    "fastify-type-provider-zod": "^4.0.2",
    "fastify": "^5.1.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
